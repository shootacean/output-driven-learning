@charset "UTF-8"

html
  font-size 62.5%

body
  color #333
  font-size 1.2rem
  font-family "Hiragino Kaku Gothic ProN", Meiryo, sans-serif

*, *::before, *::after
  box-sizing border-box

a:link, a:visited, a:hover, a:active
  color #d03c56
  text-decoration none


.clear-fix::after
  content ''
  display block
  clear both

.hidden
  display none


.header
  width 100%
  padding 28px 0 10px
  background url("../images/bg-header.gif") repeat-x
  box-shadow 0 0 10px 1px #e3e3e3

  .logo
    width 225px
    height 56px
    margin 0 auto
    background url("../images/logo.png") no-repeat
    overflow hidden
    text-indent 100%
    white-space nowrap

    a
      display block
      width 100%
      height 100%

.global-nav
  navActive()
    background-color #d03c56
    color: #fff
    transition 0.3s

  margin-top 15px
  text-align center

  .nav-item
    display inline-block
    margin 0 10px

    &.active
      a
        navActive()

    a
      display inline-block
      width 100px
      height 30px
      line-height 30px
      text-align center
      border-radius 8px
      color #666 border-radius
      font-size 1.3rem
      letter-spacing 1px

      &:hover
        navActive()

.wrapper
  width 970px
  margin 30px auto 40px

.main
  display block
  float left
  width 660px

  .hot-topic
    hotTopicColor = #2d3d54

    display block
    height 300px
    margin-bottom 30px
    box-shadow 0 6px 4px -4px rgba(0, 0, 0, 0.15)
    transition opacity 0.15s

    &:hover
      opacity 0.85

    .image
      float left
      width 50%
      height 100%

    .content
      position relative
      float left
      width 50%
      height 100%
      padding 105px 25px 0
      background-color hotTopicColor
      line-height 1.6

    .title
      margin-bottom 15px
      color #fff
      font-weight normal
      font-size 2.0rem

    .description
      color #ddc

    .date
      position absolute
      top 60px
      left 0
      width 140px
      padding 4px
      background-color #fff
      color hotTopicColor
      text-align center
      letter-spacing 1px
      font-weight bold
      font-size 1.1rem
      line-height 1

.side-menu
  float right
  width 275px

.footer
  width 100%

// 確認用
.side-menu, .footer
  border 1px solid #aaa
  background-color: #ccc

.footer
  height 100px

.main, .side-menu
  height 500px
